<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <head>
        <remove src="Oander_PriceTooltip::css/product/price-tooltip.css" />
    </head>

    <body>

        <referenceContainer name="main.content" htmlClass="page-main" />

        <referenceContainer name="product.view.top" htmlClass="product-view-top container">
            <container name="product.view.top.row" htmlTag="div" htmlClass="row" before="-">
                <container name="product.view.top.left" htmlTag="div" htmlClass="col-md-6 col-lg-4" />
                <container name="product.view.top.center" htmlTag="div" htmlClass="col-md-6 col-lg-5" />
                <container name="product.view.top.right" htmlTag="div" htmlClass="col-lg-3">
                    <container name="product.info.right" htmlTag="div" htmlClass="product-info-right" />
                </container>
            </container>
        </referenceContainer>

        <referenceContainer name="product.info.media" htmlClass="product-info-media mb-2" />
        <referenceContainer name="product.info.main" htmlClass="product-info-main" />

        <container name="product.view.content" htmlTag="div" htmlClass="product-view-content">
            <container name="product.view.content.container" htmlTag="div" htmlClass="container" />
        </container>

        <!-- Moves -->
        <move element="product.view.content" destination="main" before="-" />
        <move element="product.view.content" destination="main" after="product.view.top" />

        <move element="product.info.media" destination="product.view.top.left" before="-" />
        <move element="product.info.main" destination="product.view.top.center" before="-" />

        <move element="product.info.price" destination="product.info.right" before="-" />
        <move element="product.info.social" destination="product.info.right" after="product.info.price" />
        <move element="product.info.sku" destination="product.info.main" after="page.main.title" />

        <move element="product.info.details" destination="product.view.content.container" before="-" />
        <move element="content.aside" destination="product.view.content.container" />


        <!-- Warehouse Manager moves-->
        <move element="view.addto.warehouse.btn" destination="product.info.right" after="product.essential.bottom" />
        <move element="view.warehouse" destination="product.info.right" after="view.warehouse" />

        <!-- Product icons -->
        <move element="view.addto.producticons" destination="product.info.right" after="product.info.social" />


        <!-- Removes -->
        <referenceContainer name="breadcrumbs" remove="true" />
        <referenceContainer name="product.info.type" remove="true" />
        <referenceContainer name="social.box" remove="true" />
        <referenceContainer name="product.info.review" remove="true" />

    </body>
</page>
