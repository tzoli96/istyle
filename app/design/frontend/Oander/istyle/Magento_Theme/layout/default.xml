<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="header-wrapper" htmlClass="d-flex container page-header-wrapper">
            <block class="Magento\Framework\View\Element\Template" name="nav-toggle"
                   template="Magento_Theme::html/header/header-nav-toggle.phtml" before="logo" />
            <container name="page-header-right" htmlTag="div" htmlClass="header-right d-flex" after="-">
                <block class="Magento\Framework\View\Element\Template" name="header-account"
                       template="Magento_Theme::html/header/header-account.phtml">
                    <block class="Magento\Framework\View\Element\Html\Links" name="top.links">
                        <arguments>
                            <argument name="css_class" xsi:type="string">header-account-dropdown</argument>
                        </arguments>
                    </block>
                </block>
            </container>
        </referenceContainer>


        <!-- Footer container -->
        <referenceContainer name="footer-container">
            <container name="footer.info" htmlClass="footer-info row" htmlTag="div" after="footer">
                <block class="Magento\Framework\View\Element\Template" template="Magento_Theme::html/footer/info.phtml" />
            </container>
        </referenceContainer>
        <referenceContainer name="footer" htmlClass="footer-content row">
            <container name="footer.content.middle" htmlClass="footer-content-middle col-lg-5" htmlTag="div" after="footer.content.left">
                <block class="Magento\Framework\View\Element\Template" name="footer_left_map"
                       template="Magento_Theme::html/footer/map.phtml" after="footer_left_links">
                    <block class="Magento\Cms\Block\Block" name="footer_map">
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_map</argument>
                        </arguments>
                    </block>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="footer.content.left" htmlClass="footer-content-left col-lg-4" htmlTag="div">
            <block class="Magento\Framework\View\Element\Template" name="footer_left_links"
                   template="Magento_Theme::html/footer/links.phtml">
                <block class="Magento\Cms\Block\Block" name="footer_links_1">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links_1</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="footer_links_2">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links_2</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceContainer name="footer.content.right" htmlClass="footer-content-right col-lg-3" htmlTag="div" />
        <referenceContainer name="footer.bottom" htmlClass="footer-bottom row">
            <container name="footer.bottom.left" htmlClass="footer-bottom-left col-lg-4 col-xl-5" htmlTag="div">
                <block class="Magento\Theme\Block\Html\Footer" template="Magento_Theme::html/footer/copyright.phtml" />
                <block class="Magento\Theme\Block\Html\Footer" template="Magento_Theme::html/footer/site-developer.phtml" />
            </container>
            <referenceContainer name="footer.bottom.right" htmlTag="div" htmlClass="footer-bottom-right col-lg-8 col-xl-7 clearfix" />
        </referenceContainer>

        <!-- Remove elements -->
        <referenceContainer name="header.panel.wrapper" remove="true" />
        <referenceContainer name="footer_links" remove="true" />

        <!-- Move elements -->
        <move element="navigation.sections" destination="header-wrapper" after="logo" />
        <move element="minicart" destination="page-header-right" after="-" />
        <move element="top.search" destination="page-header-right" before="header-account" />

    </body>
</page>