<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="header-wrapper" htmlClass="d-lg-flex container page-header-wrapper">
            <container name="page-header-right" htmlTag="div" htmlClass="header-right d-lg-flex" after="-">
                <block class="Magento\Framework\View\Element\Template" name="header-account"
                       template="Magento_Theme::html/header/header-account.phtml">
                    <block class="Magento\Framework\View\Element\Html\Links" name="top.links">
                        <arguments>
                            <argument name="css_class" xsi:type="string">header-account-dropdown</argument>
                        </arguments>
                    </block>
                </block>
            </container>
        </referenceContainer>

        <!-- Remove elements -->
        <referenceContainer name="header.panel.wrapper" remove="true" />

        <!-- Move elements -->
        <move element="navigation.sections" destination="header-wrapper" after="logo" />
        <move element="minicart" destination="page-header-right" after="-" />

    </body>
</page>