<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!--<referenceBlock name="header.panel.wrapper" remove="true" />-->
        <!--<referenceContainer name="header-wrapper" htmlClass="header content container" />-->

        <referenceContainer name="header-wrapper" htmlClass="d-lg-flex container page-header-wrapper">
            <container name="page-header-right" htmlTag="div" htmlClass="header-right d-lg-flex" after="-" />
            <block class="Magento\Framework\View\Element\Template" name="header_user_wrapper"
                   template="Magento_Theme::html/header-user-wrapper.phtml" />
        </referenceContainer>
        <referenceBlock class="Magento\Framework\View\Element\Html\Links" name="top.links">
            <arguments>
                <argument name="css_class" xsi:type="string">header-account</argument>
            </arguments>
        </referenceBlock>

        <!--<referenceContainer name="header.panel" htmlClass="container" />-->
        <!--<referenceContainer name="header-wrapper" htmlClass="container" />-->


        <!-- Remove elements -->
        <referenceContainer name="header.panel.wrapper" remove="true" />

        <!-- Move elements -->
        <move element="navigation.sections" destination="header-wrapper" after="logo" />
        <move element="top.links" destination="page-header-right" before="topSearch" />
        <move element="header_user_wrapper" destination="page-header-right" before="top.links" />
        <move element="minicart" destination="page-header-right" after="-" />
        <!--<referenceBlock name="" />-->

    </body>
</page>