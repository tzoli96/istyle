                        <a href="<?php echo $this->getLink(); ?>" class="widget-title-link">
                            <?php echo $this->getTitle(); ?>
                        </a>
                    <?php else: ?>
                        <?php echo $this->getTitle(); ?>
                    <?php endif; ?>
                </h2>
            <?php endif; ?>

            <?php if ($this->getDescription()): ?>
                <div class="description">
                    <?php echo $this->getDescription(); ?>
                </div>
            <?php endif; ?>

            <?php if ($this->getDescription()): ?>
                <div class="buttons-set hidden-md-down">
                    <a href="<?php echo $this->getLink(); ?>" class="link"><?php echo __('Read More') ?></a>
                </div>
            <?php endif; ?>
        </div>
    </div>
