<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="header.container" as="header_container" label="Page Header Container" htmlTag="header" htmlClass="page-header" before="main.content">
                <container name="header-wrapper" htmlTag="div" htmlClass="d-flex container page-header-wrapper">
                    <block class="Magento\Framework\View\Element\Template" name="nav-toggle"
                           template="Magento_Theme::html/header/header-nav-toggle.phtml" before="logo" />

                    <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                        <arguments>
                            <argument name="logo_img_width" xsi:type="number">189</argument>
                            <argument name="logo_img_height" xsi:type="number">64</argument>
                        </arguments>
                    </block>

                    <container name="page-header-right" htmlTag="div" htmlClass="header-right d-flex" after="-">
                        <block class="Magento\Framework\View\Element\Template" name="header-account"
                               template="Magento_Theme::html/header/header-account.phtml">
                        </block>
                    </container>
                </container>
            </container>
        </referenceContainer>

        <move element="logo" destination="header-wrapper" after="nav-toggle" />
    </body>
</page>
