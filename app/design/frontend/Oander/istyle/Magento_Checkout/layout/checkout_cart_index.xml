<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.summary.title">
            <arguments>
                <argument translate="true" name="text" xsi:type="string">Cart Summary</argument>
                <argument name="tag" xsi:type="string">h2</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Cart</argument>
            </action>
        </referenceBlock>

        <move element="page.messages" destination="col.form.cart" before="col.form.cart" />
        <move element="checkout.cart.form" destination="col.form.cart" after="page.messages" />
        <move element="checkout.cart.coupon" destination="cart.summary" before="checkout.cart.methods.bottom" />
    </body>
</page>
