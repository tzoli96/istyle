<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Oney_ThreeByFour::css/oney.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <referenceContainer name="product.info.main">
            <block before="product.info.price" class="Oney\ThreeByFour\Block\Catalog\Product" name="oney.product"/>
            <block after="oney.product" class="Oney\ThreeByFour\Block\Catalog\Simulation" name="oney.product.simulation"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Oney\ThreeByFour\Block\Pedagogique\Modal"
                   name="oney.cart.modal"/>
        </referenceContainer>
    </body>
</page>
