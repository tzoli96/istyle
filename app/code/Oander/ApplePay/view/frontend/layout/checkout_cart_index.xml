        <referenceContainer name="checkout.cart.methods">
            <block class="Oander\ApplePay\Block\Main" name="applepay.cart.button" before="checkout.cart.methods.onepage.bottom" template="Oander_ApplePay::cart.phtml">
                <arguments>
                    <argument name="section" xsi:type="string">checkout</argument>
