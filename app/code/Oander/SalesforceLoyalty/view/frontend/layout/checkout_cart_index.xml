<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="cart.summary">
                    <block class="Oander\SalesforceLoyalty\Block\Cart\Loyaltypoints"
                           name="salesforceloyalty.cart.loyaltypoints"
                           template="Oander_SalesforceLoyalty::cart/loyaltypoints.phtml"
                           before="checkout.cart.methods.bottom"
                           ifconfig="oander_salesforce/salesforce_loyalty_spending/enabled"/>
        </referenceContainer>
        <referenceBlock name="checkout.cart.methods">
            <block class="Oander\SalesforceLoyalty\Block\Cart\Loyaltypoints"
                   name="salesforceloyalty.cart.methods.earnable"
                   template="Oander_SalesforceLoyalty::cart/earnable.phtml"
                   before="checkout.cart.methods.onepage.bottom"
                   ifconfig="oander_salesforce/salesforce_loyalty_spending/enabled"/>
        </referenceBlock>
    </body>
</page>