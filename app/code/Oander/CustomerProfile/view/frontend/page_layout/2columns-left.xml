<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">

    <referenceContainer name="columns" htmlClass="columns row mb-3">
        <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar-wrapper col-md-4 col-lg-3" before="main">
            <container name="sidebar.main" as="sidebar_main" label="Sidebar Main" htmlTag="div"
                       htmlClass="sidebar sidebar-main" />
            <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"
                       htmlTag="div" htmlClass="sidebar sidebar-additional" after="sidebar.main" />
        </container>
    </referenceContainer>
    <referenceContainer name="main" htmlClass="column main col-md-8 col-lg-9 flex-md-last order-md-last" />

</layout>