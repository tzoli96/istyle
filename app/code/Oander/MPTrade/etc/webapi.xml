<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/api/oander/mptrade/:param" method="GET">
        <service class="Oander\MPTrade\Api\MPTradeInterface" method="getData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/api/oander/mptrade/:param/:param2" method="GET">
        <service class="Oander\MPTrade\Api\MPTradeInterface" method="getData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/api/oander/mptrade/:param/:param2/:param3" method="GET">
        <service class="Oander\MPTrade\Api\MPTradeInterface" method="getData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/api/oander/mptrade-buyout" method="POST">
        <service class="Oander\MPTrade\Api\MPTradeInterface" method="postData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>