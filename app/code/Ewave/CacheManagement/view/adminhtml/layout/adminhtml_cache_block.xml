<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.cache.grid.columnSet">
            <block class="Ewave\CacheManagement\Block\Adminhtml\Cache\Grid\Column\StoreStatuses"
                   name="adminhtml.cache.grid.columnSet.storeStatus"
                   as="store_status">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Store View Status</argument>
                    <argument name="index" xsi:type="string">cache_type</argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="align" xsi:type="string">left</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
